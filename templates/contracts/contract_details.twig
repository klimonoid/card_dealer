{% extends '/parts/base.twig' %}

{% block body %}
    {% if message is not null%}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endif %}
    <div class="card">
        <div class="card-body align-content-center">
            <h1 class="card-title">Договор №{{ contract.num }}</h1>
            <p class="card-text">
                <b>ФИО:</b> {{ contract.surname }} {{ contract.given_name }} {{ contract.patronymic }}
                <br>
                <b>Возраст:</b> {{ contract.age }}
                <br>
                <b>Паспорт:</b>
                <br>
                <b>Серия:</b> {{ contract.series }} <b>Номер:</b> {{ contract.number }}
                <br>
                Сверьте персональные данные клиента с данными предоставленными на экране.
                При несовпадении отклоните подписание договора,
                клиенту будет необходимо исправить свои данные, после чего подать заявление повторно
            </p>
            <form method="post" action="/contract-signing-post/{{ contract.id }}">
                <div class="row mb-3">
                    <label for="comment" class="form-label">Комментарий</label>
                    <textarea class="form-control" name="comment"
                              id="comment" rows="3">{{ form ? form.comment }}</textarea>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1"
                           value="approved" checked>
                    <label class="form-check-label" for="exampleRadios1">
                        Одобрить
                    </label>
                </div>
                <div class="form-check mb-3">
                    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2"
                           value="rejected">
                    <label class="form-check-label" for="exampleRadios2">
                        Отклонить
                    </label>
                </div>
                <button type="submit" class="btn btn-primary">Завершить обработку</button>
            </form>
        </div>
    </div>
{% endblock %}